{
    "name": "User Preferences",
    "doctype": "DocType",
    "module": "Expresso",
    "is_single": 0,
    "is_tree": 0,
    "autoname": "hash",
    "fields": [
        {
            "fieldname": "user",
            "label": "User",
            "fieldtype": "Link",
            "options": "User",
            "reqd": 1
        },
        {
            "fieldname": "report_frequency",
            "label": "Report Frequency",
            "fieldtype": "Select",
            "options": "Never\nDaily\nWeekly\nMonthly",
            "default": "Daily"
        },
        {
            "fieldname": "report_time",
            "label": "Report Time",
            "fieldtype": "Time",
            "default": "09:00:00"
        },
        {
            "fieldname": "report_format",
            "label": "Report Format",
            "fieldtype": "Select",
            "options": "PDF\nCSV\nBoth",
            "default": "PDF"
        },
        {
            "fieldname": "notification_preferences",
            "label": "Notification Preferences",
            "fieldtype": "Section Break"
        },
        {
            "fieldname": "enable_in_app_notifications",
            "label": "Enable In-App Notifications",
            "fieldtype": "Check",
            "default": 1
        },
        {
            "fieldname": "enable_email_notifications",
            "label": "Enable Email Notifications",
            "fieldtype": "Check",
            "default": 1
        },
        {
            "fieldname": "enable_push_notifications",
            "label": "Enable Push Notifications",
            "fieldtype": "Check",
            "default": 1
        }
    ],
    "permissions": [
        {
            "role": "System Manager",
            "read": 1,
            "write": 1,
            "create": 1
        }
    ]
